<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox minHeight="500"
      minWidth="450"
      prefHeight="500"
      prefWidth="490"
      xmlns="http://javafx.com/javafx/11.0.14-internal"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.controllers.Customers" >
    <AnchorPane minHeight="-Infinity" prefHeight="75.0" prefWidth="450.0">
        <Label layoutX="14.0" layoutY="24.0" text="Scheduling Management">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        <padding>
            <Insets bottom="28.0" top="28.0" />
        </padding>
    </AnchorPane>
    <AnchorPane minHeight="425.0" minWidth="450.0">
        <VBox AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <AnchorPane minHeight="375" minWidth="450" prefHeight="375.0" prefWidth="490.0">
                <GridPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="0.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="-Infinity" prefHeight="45.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="-Infinity" prefHeight="285.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="-Infinity" prefHeight="45.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <Label text="Customers" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <font>
                            <Font name="System Bold" size="16.0" />
                        </font>
                        <padding>
                            <Insets left="20" />
                        </padding>
                    </Label>
                    <TextField promptText="Search by Name or ID"
                               fx:id="partSearchField"
                               onAction="#onSearchAction"
                               GridPane.columnIndex="1"
                               GridPane.rowIndex="0" />
                    <TableView fx:id="customerTable" prefHeight="200"
                               prefWidth="450"
                               GridPane.columnSpan="2"
                               GridPane.rowIndex="1">
                        <columns>
                            <TableColumn text="ID"
                                         fx:id="idColumn"
                                         minWidth="20"
                                         maxWidth="100"
                                         prefWidth="50"/>
                            <TableColumn text="Name"
                                         fx:id="nameColumn"
                                         minWidth="50"
                                         prefWidth="100"  />
                            <TableColumn text="Address"
                                         fx:id="addressColumn"
                                         minWidth="50"
                                         prefWidth="100"  />
                            <TableColumn text="Division"
                                         fx:id="partPriceColumn"
                                         minWidth="50"
                                         prefWidth="100"  />
                            <TableColumn text="Phone Number"
                                         fx:id="phoneNumberColumn"
                                         minWidth="50"
                                         prefWidth="100" />
                        </columns>
                    </TableView>
                    <ButtonBar GridPane.columnSpan="2" GridPane.rowIndex="2">
                        <buttons>
                            <Button onAction="" text="View" />
                            <Button onAction="#" text="Add" />
                            <Button onAction="#" text="Modify" />
                            <Button onAction="#" text="Delete" />
                        </buttons>
                    </ButtonBar>
                </GridPane>
            </AnchorPane>
            <AnchorPane prefHeight="50.0" prefWidth="450">
                <Button text="EXIT"
                        onAction="#closeWindow"
                        prefHeight="25.0"
                        prefWidth="75.0"
                        AnchorPane.bottomAnchor="14.0"
                        AnchorPane.rightAnchor="50.0"
                        AnchorPane.topAnchor="6.0">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </AnchorPane>
        </VBox>
    </AnchorPane>
</VBox>

