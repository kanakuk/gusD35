<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox minHeight="500" minWidth="450" prefHeight="500" prefWidth="490" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.Customers">
    <AnchorPane minHeight="-Infinity" prefHeight="75.0" prefWidth="450.0">
        <Label layoutX="14.0" layoutY="24.0" text="Scheduling Management">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        <padding>
            <Insets bottom="28.0" top="28.0" />
        </padding>
    </AnchorPane>
    <AnchorPane minHeight="425.0" minWidth="450.0">
        <VBox AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <AnchorPane minHeight="375" minWidth="450" prefHeight="375.0" prefWidth="490.0">
                <GridPane AnchorPane.bottomAnchor="0.0"
                          AnchorPane.leftAnchor="20.0"
                          AnchorPane.rightAnchor="20.0"
                          AnchorPane.topAnchor="0.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="225.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="225.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="-Infinity" prefHeight="45.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="-Infinity" prefHeight="285.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="-Infinity" prefHeight="45.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <Label text="Customers" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <font>
                            <Font name="System Bold" size="16.0" />
                        </font>
                        <padding>
                            <Insets left="20" />
                        </padding>
                    </Label>
                    <HBox GridPane.columnIndex="1" GridPane.rowIndex="0" spacing="10"
                          alignment="CENTER_RIGHT" prefHeight="45">

                        <TextField fx:id="partSearchField"
                                   promptText="Search by Name or ID"
                                   prefWidth="130"/>
                        <Button prefWidth="60" text="Search" />
                    </HBox>
                    <TableView fx:id="customerTable" prefHeight="200" prefWidth="450" GridPane.columnSpan="2" GridPane.rowIndex="1">
                        <columns>
                            <TableColumn fx:id="idColumn" maxWidth="100" minWidth="20" prefWidth="50" text="ID" />
                            <TableColumn fx:id="nameColumn" minWidth="50" prefWidth="100" text="Name" />
                            <TableColumn fx:id="addressColumn" minWidth="50" prefWidth="100" text="Address" />
                            <TableColumn fx:id="partPriceColumn" minWidth="50" prefWidth="100" text="Division" />
                            <TableColumn fx:id="phoneNumberColumn" minWidth="50" prefWidth="100" text="Phone Number" />
                        </columns>
                    </TableView>
                    <AnchorPane GridPane.columnSpan="2" GridPane.rowIndex="2">
                        <ButtonBar minWidth="450" AnchorPane.topAnchor="10">
                            <buttons>
                                <Button onAction="" text="View" ButtonBar.buttonData="LEFT"/>
                                <Button onAction="#" text="Add" />
                                <Button onAction="#" text="Modify" />
                                <Button onAction="#" text="Delete" />
                            </buttons>
                        </ButtonBar>
                    </AnchorPane>
                </GridPane>
            </AnchorPane>
            <AnchorPane prefHeight="50.0" prefWidth="450">
                <Button onAction="#closeWindow"
                        text="EXIT"
                        prefHeight="25.0"
                        prefWidth="75.0"
                        AnchorPane.bottomAnchor="14.0"
                        AnchorPane.rightAnchor="40.0"
                        AnchorPane.topAnchor="6.0">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </AnchorPane>
        </VBox>
    </AnchorPane>
</VBox>
